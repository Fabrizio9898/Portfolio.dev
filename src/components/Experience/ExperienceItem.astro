---
import {StackUrls} from '../../data/stack'

interface Props {
  title: string
  company: string
  description: string
  date: string
  stack?:typeof StackUrls,
  data:number
}

const { title, company, description, date, stack, data } = Astro.props
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4] "
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      {/* 1. TÍTULO: Usamos data para buscar TRAYECTORIA1_TITLE, TRAYECTORIA2_TITLE, etc. */}
      <h3 
        class="text-xl font-bold text-yellow-400" 
        data-i18n={`TRAYECTORIA${data}_TITLE`}
      >
        {title}
      </h3>

      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>
      
      {/* 2. FECHA: Lo mismo para la fecha */}
      <time 
        class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80" 
        data-i18n={`TRAYECTORIA${data}_DATE`}
      >
        {date}
      </time>
    </div>
  </div>

  {/* 3. DESCRIPCIÓN: Lo mismo para la descripción */}
  <div 
    class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3" 
    data-i18n={`TRAYECTORIA${data}_DESCRIPTION`}
  >
    {description} <br>
    
    {stack && (
      <nav class="flex flex-wrap gap-1 mt-2">
        {/* Corregí <spam> por <span> (spam no existe en HTML) */}
        <span class="stack border-b border-black dark:border-white">Stack:</span>
        {stack.map((tech) => (
          <img height="25" width="25" src={tech.url} alt={tech.alt} title={tech.title} />
        ))}
      </nav>
    )} 
  </div>
</div>

<style>
  .stack{
    font-size: 1rem;
    font-weight: 650;
  }
</style>